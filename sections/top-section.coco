<style>
  .top_section_container {
    position: relative;
  }

  .top_section_box {
    width: 700px;
    margin: 0 auto;
    text-align: center;
    margin-bottom: 84px;
  }

  .rainbow {
    width: 70%;
    height: 500px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: -1;

    margin: 0 auto;
    background: linear-gradient(
      90deg,
      #512c30 0%,
      #67304c 14.23%,
      #672f64 33.26%,
      #4b3971 56.49%,
      #35385e 81.38%,
      #233449 100%
    );
    filter: blur(125px);
  }

  .top_section_title {
    font-size: 3rem;
    font-weight: 700;
  }

  .top_section_description {
    font-weight: 400;
    margin-top: 2rem;
    opacity: 0.5;
    margin-bottom: 48px;
  }

  {% comment %} =====Slider=====  {% endcomment %}

  .slider {
    overflow: hidden;
    width: 100%;
    display: flex;
  }

  .slide-track {
    display: flex;
  }

  .slide-track:nth-child(1) {
    animation: loop 50s -25s linear infinite;
  }

  .slide-track:nth-child(2) {
    animation: loop2 50s linear infinite;
  }

  .slide {
    width: 300px;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slide img {
    width: 80%;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  @keyframes loop {
    0% {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }

  @keyframes loop2 {
    0% {
      transform: translateX(0);
    }
    to {
      transform: translateX(-200%);
    }
  }
</style>

