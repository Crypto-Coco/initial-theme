<div class="item_card">
  <div class="item_card-image_wrapper">
    <a class="item_card-image_link" href="{{ item_url }}">
      <img class="item_card-image" src="{{ image_url }}">
    </a>
  </div>
  <div class="item_card-detail">
    <div class="item_card-collection_wrapper">
      <a class="item_card-collection_name" href="{{ collection_url }}">
        {{ collection_name }}
      </a>
    </div>

    <a class="item_card-name_wrapper_link" href="{{ item_url }}">
      <div class="item_card-name_wrapper">
        <p class="item_card-name">
          {{ name }}
        </p>
        {%- if amount != null -%}
          <div class="item_card-price_wrapper">
            <p class="item_card-price_wrapper-price">
              {{ amount | format_to_ether }}
              {{ symbol }}
            </p>
          </div>
        {%- endif -%}
      </div>
    </a>
  </div>
</div>

<style>
  .item_card {
    display: flex;
    align-items: center;
    flex-direction: column;
    cursor: pointer;
    position: relative;
  }

  .item_card:hover .item_card-image {
    transform: scale(1.2);
  }

  .item_card-image_wrapper {
    border-radius: 24px;
    width: 100%;
    z-index: 1;
    overflow: hidden;
    position: relative;
    user-select: none;
    border-color: #353945;
    border-width: 1px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .item_card-image_link {
    cursor: pointer;
    text-decoration: none;
    z-index: 1;
  }

  .item_card-image {
    transition: all 250ms cubic-bezier(0.175, 0.885, 0.32, 1.275) 0s;
    object-fit: contain;
    width: 100%;
    display: block;
  }

  .item_card-detail {
    width: 100%;
    margin-top: 12px;
  }

  .item_card-collection_wrapper {
    display: flex;
    width: 100%;
    align-items: center;
    flex-direction: row;
  }

  .item_card-collection_name {
    line-height: 1.72;
    color: #777e90;
    word-break: break-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    position: relative;
    z-index: 1;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .item_card-collection_name:hover {
    text-decoration: underline;
  }

  .item_card-name_wrapper {
    display: flex;
    width: 100%;
    margin-top: 4px;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    overflow-wrap: break-word;
  }

  .item_card-name {
    line-height: 1.71;
    word-break: break-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight: bold;
    font-size: 0.875rem;
  }

  .item_card-name_wrapper_link {
    cursor: pointer;
    text-decoration: none;
    color: white;
  }

  .item_card-name_wrapper_link:before {
    content: '';
    cursor: inherit;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
  }

  .item_card-price_wrapper {
    display: flex;
    algin-items: center;
    line-height: 1.67;
  }

  .item_card-price_wrapper-price {
    color: #58bd7d;
    font-weight: bold;
    font-size: 0.875rem;
  }
</style>